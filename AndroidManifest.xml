<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.globalsearch"
    android:sharedUserId="android.uid.shared">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.SET_PREFERRED_APPLICATIONS" />
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />

    <!-- Only the system process (where the search dialog runs) is allowed to get suggestions,
         since they can come from content provider that require special permission to read. -->
    <permission android:name="com.android.globalsearch.GET_SUGGESTIONS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="signature" />

    <!-- Only the system process (where the search dialog runs) is allowed to write
         search statistics, to keep applications from gaming the source ranking. -->
    <permission android:name="com.android.globalsearch.WRITE_STATS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="signature" />

    <!-- Only the system process (where the search dialog runs) is allowed to launch
         search suggestions, since they can be arbitrary intents. -->
    <permission android:name="com.android.globalsearch.LAUNCH_SUGGESTIONS"
        android:permissionGroup="android.permission-group.SYSTEM_TOOLS"
        android:protectionLevel="signature" />

    <application
        android:label="@string/global_search">

        <activity android:name=".GlobalSearch"
                android:process="android.process.acore"
                android:permission="com.android.globalsearch.LAUNCH_SUGGESTIONS"
                android:stateNotNeeded="true"
                android:theme="@android:style/Theme.NoDisplay"
                android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <!-- This must be higher than the default priority (0), which
                 is what GoogleSearch uses. -->
            <intent-filter android:priority="500">
                <action android:name="android.search.action.GLOBAL_SEARCH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <meta-data android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <activity android:name=".SearchSettings"
                android:label="@string/search_settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.search.action.SEARCH_SETTINGS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider android:name=".SuggestionProvider"
            android:authorities="com.android.globalsearch.SuggestionProvider"
            android:process="android.process.acore"
            android:permission="com.android.globalsearch.GET_SUGGESTIONS" />

        <provider android:name=".StatsProvider"
            android:permission="com.android.globalsearch.WRITE_STATS"
            android:authorities="com.android.globalsearch.stats"
            android:process="android.process.acore" />

        <meta-data android:name="android.app.default_searchable"
            android:value=".GlobalSearch" />

    </application>
</manifest>
